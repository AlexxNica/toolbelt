{
  "parser": "babel-eslint",
  "extends": [
    "vtex",
    "vtex-react",
    "plugin:import/recommended"
  ],
  "plugins": ["import"],
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "always"
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "amd": true,
        "ignore": ["^[a-zA-Z\\.@-]+$"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": true
  }
}
